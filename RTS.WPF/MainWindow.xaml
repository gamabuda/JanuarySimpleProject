<Window x:Class="RTS.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RTS.WPF"
        mc:Ignorable="d"
        Title="Barrack" Height="450" Width="800">
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Warrior" Click="WarriorButton_Click" Height="35" Width="250" BorderBrush="Black" Background="#FFEAEAEA" FontSize="18" FontFamily="Comic Sans MS" FontWeight="Bold"/>
            <Button Content="Rogue" Click="RogueButton_Click" Height="35" Width="250" Background="#FFEAEAEA" FontFamily="Comic Sans MS" FontSize="18" FontWeight="Bold" BorderBrush="Black"/>
            <Button Content="Wizard" Click="WizardButton_Click" Height="35" Width="250" Background="#FFEAEAEA" FontFamily="Comic Sans MS" FontSize="18" FontWeight="Bold" BorderBrush="Black"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center" Height="40" Margin="0,89,0,0" TextWrapping="Wrap" Text="Choose your character!" VerticalAlignment="Top" Width="344" TextAlignment="Center" FontFamily="Comic Sans MS" FontSize="26" FontWeight="Bold"/>
        
    </Grid>
    
</Window>
    
