<Window x:Class="RTS.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RTS.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <Image x:Key="Warrior" Source="/warrior-icon.png"></Image>
        <Image x:Key="Wizard" Source="/wizard-icon.png"></Image>
        <Image x:Key="Rogue" Source="/rogue-icon.png"></Image>
    </Window.Resources>
    
    <Grid>
        <Button x:Name="Warrior" Content="Warrior" HorizontalAlignment="Left" Height="20" Margin="10,452,0,0" VerticalAlignment="Top" Width="50" Click="Button_Click"/>
        <Button x:Name="Wizard" Content="Wizard" HorizontalAlignment="Left" Height="20" Margin="10,480,0,0" VerticalAlignment="Top" Width="50" Click="Wizard_Click"/>
        <Button x:Name="Rogue" Content="Rogue" HorizontalAlignment="Left" Height="20" Margin="10,508,0,0" VerticalAlignment="Top" Width="50" Click="Rogue_Click"/>
        <Label x:Name="MainInformation" Content="" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top"/>
        <ContentPresenter x:Name="Img" Width="436px" Height="436px" Margin="340,8,24,140"></ContentPresenter>
        <Button Content="+1000XP" HorizontalAlignment="Left" Margin="618,498,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="Button_Click_1"/>
        <Label x:Name="Str" Content="Strength:" HorizontalAlignment="Left" Margin="10,329,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Dex" Content="Dexterity:" HorizontalAlignment="Left" Margin="10,359,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Int" Content="Intelligence:" HorizontalAlignment="Left" Margin="10,389,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Vit" Content="Vitality:" HorizontalAlignment="Left" Margin="10,419,0,0" VerticalAlignment="Top"/>
        <Button x:Name="strPlus" Content="+" HorizontalAlignment="Left" Margin="186,327,0,0" VerticalAlignment="Top" Width="30" Height="30" Click="strPlus_Click"/>
        <Button x:Name="dexPlus" Content="+" HorizontalAlignment="Left" Margin="186,357,0,0" VerticalAlignment="Top" Width="30" Height="30" Click="dexPlus_Click"/>
        <Button x:Name="intPlus" Content="+" HorizontalAlignment="Left" Margin="186,387,0,0" VerticalAlignment="Top" Width="30" Height="30" RenderTransformOrigin="0.533,0.601" Click="intPlus_Click"/>
        <Button x:Name="vitPlus" Content="+" HorizontalAlignment="Left" Margin="186,417,0,0" VerticalAlignment="Top" Width="30" Height="30" RenderTransformOrigin="0.533,0.601" Click="vitPlus_Click"/>
        <Button x:Name="strMinus" Content="-" HorizontalAlignment="Left" Margin="242,327,0,0" VerticalAlignment="Top" Width="30" Height="30" Click="strMinus_Click"/>
        <Button x:Name="dexMinus" Content="-" HorizontalAlignment="Left" Margin="242,357,0,0" VerticalAlignment="Top" Width="30" Height="30" Click="dexMinus_Click"/>
        <Button x:Name="intMinus" Content="-" HorizontalAlignment="Left" Margin="242,387,0,0" VerticalAlignment="Top" Width="30" Height="30" RenderTransformOrigin="0.533,0.601" Click="intMinus_Click"/>
        <Button x:Name="vitMinus" Content="-" HorizontalAlignment="Left" Margin="242,417,0,0" VerticalAlignment="Top" Width="30" Height="30" RenderTransformOrigin="0.533,0.601" Click="vitMinus_Click"/>
        <Label x:Name="SkillPointsInfo" Content="" HorizontalAlignment="Left" Margin="581,449,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
