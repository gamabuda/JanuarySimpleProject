<Window x:Class="RTS.WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RTS.WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid>
        <TextBlock FontSize="16"
                   x:Name="LvlTB"
                   Margin="10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock 
                x:Name="StrTB"
         FontSize="16" 
         Margin="10" 
         Padding="10" 
         Text="{Binding Strength}"/>
            <TextBlock 
                x:Name="DexTB"
         FontSize="16" 
         Margin="10" 
         Padding="10"
         Text="{Binding Dexterity}"/>
            <TextBlock 
                x:Name="IntTB"
         FontSize="16" 
         Margin="10" 
         Padding="10" 
                Text="{Binding Intelligence}"/>
            <TextBlock 
                x:Name="VitTB"
         FontSize="16" 
         Margin="10" 
         Padding="10" 
         Text="{Binding Vitality}"/>
            <Button FontSize="16" Margin="10" Padding="10" Content="Level up"/>
        </StackPanel> 


    </Grid>
</Window>
