<Window x:Class="RTS.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RTS.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Warrior" FontSize="20" Click="Button_Click_1" Width="85"/>
            <Button Content="Rogue" FontSize="20" Margin="5,0,5,0" Click="Button_Click_2" Width="84"/>
            <Button Content="Wizzzard" FontSize="20" Click="Button_Click_3" Width="85"/>
        </StackPanel>

        <TextBlock FontSize="16" 
            x:Name="LvlTB"
            Text="{Binding Level}"
            Margin="10" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Grid.Column="1" Margin="200,309,0,0">
            <TextBlock
         x:Name="StrTB"
         FontSize="16"  
         Padding="10" 
         Text="{Binding Strength}"/>
            <TextBlock 
         x:Name="DexTB"
         FontSize="16"  
         Padding="10" 
         Text="{Binding Dexterity}"/>
            <TextBlock 
         x:Name="IntTB"
         FontSize="16" 
         Padding="10" 
         Text="{Binding Inteligence}"/>
            <TextBlock 
         x:Name="VitTB"
         FontSize="16" 
         Padding="10" 
         Text="{Binding Vitality}"/>
            <Button FontSize="16" Margin="10" Padding="10" Content="Get exp" Click="Button_Click"/>
        </StackPanel>
        <Image 
            HorizontalAlignment="Center"
            Grid.Column="1"
            VerticalAlignment="Top"
             Source="/warrior.png" Margin="0,56,0,0" Grid.Row="1" Height="226"/>
        <TextBlock
            x:Name="TBWarrior"
            FontSize="30"
            FontWeight="Bold"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Height="33"
            TextWrapping="Wrap"
            Text="Warrior"
            VerticalAlignment="Top"
            Width="109" Margin="0,1,0,0"/>
        <StackPanel Margin="6,10,82,288" Grid.Row="1">
            <TextBlock Text="Name: Warrior" FontSize="25" FontWeight="Bold" Width="290"/>
            <TextBlock Text="Level:" FontSize="20" Width="290"/>
            <TextBlock Text="Exp:" FontSize="20" Width="290"/>
        </StackPanel>
        <StackPanel Margin="0,116,75,217" Grid.Row="1">
            <TextBlock Text="Health:" FontSize="20" Width="290"/>
            <TextBlock Text="Mana:" FontSize="20" Width="290"/>
        </StackPanel>
        <StackPanel Margin="10,197,82,36" Grid.Row="1">
            <TextBlock Text="Strength:" FontSize="20" Width="290"/>
            <TextBlock Text="Dexterity:" FontSize="20" Width="290"/>
            <TextBlock Text="Intelligence:" FontSize="20" Width="290"/>
            <TextBlock Text="Vitality:" FontSize="20" Width="290"/>
        </StackPanel>
    </Grid>
</Window>
